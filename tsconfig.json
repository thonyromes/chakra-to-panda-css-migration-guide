{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@rotate/web/*": ["apps/web/src/*"],
      "@styled-system/*": ["packages/ui/styled-system/*"],
      "@rotate/ui": ["packages/ui/src"],
      "@rotate/ui/pandacss": ["packages/ui/src/pandacss"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["packages", "apps"]
}
